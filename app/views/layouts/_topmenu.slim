nav.navbar.navbar-toggleable-md.navbar-light.bg-faded.fixed-top
  .container
    = link_to root_url, class: 'navbar-brand' do
      = fa_icon :bank, text: application_title
    ul.navbar-nav.mr-auto.mt-2.mt-md-0
      = navbar_link_to 'Товары и услуги', root_path, count: Good.count
      = navbar_link_to 'Компании', companies_path, count: Company.count
    
    - if current_user.present?
      ul.navbar-nav.float-xs-right
        li.nav-item.dropdown
          = link_to '#', class: 'nav-link dropdown-toggle', data: { toggle: :dropdown } do
            = fa_icon :user, text: current_user
          .dropdown-menu aria-labelledby="supportedContentDropdown"
            = link_to 'Мои товары', goods_path, class: 'dropdown-item'
            = link_to 'Мой профиль', profile_path, class: 'dropdown-item'
            .dropdown-divider
            = link_to 'Выйти', signout_path, method: :delete, class: 'dropdown-item'
    - else
      = simple_form_for UserSession.new, method: :post, html: { class: 'form-inline' } do |f|
        = f.input :email, label: false, input_html: { class: 'form-control-sm mr-sm-2' }
        = f.input :password, as: :password, label: false, input_html: { class: 'form-control-sm mr-sm-2' }
        button.btn.btn-sm.btn-outline-success.my-2.my-sm-0 type='submit'
          = fa_icon 'arrow-circle-right'
