.jumbotron
  = simple_form_for search_form, as: :q, url: goods_path, method: :get do |f|
    .row
      .col-md-11
        = f.input :title_cont, label: false, hint: false, as: :search, input_html: { autofocus: :autofocus, class: 'mr-3' }
      .col-md-1
        .pull-right
          = f.button :submit, value: 'Найти', class: 'btn btn-primary', data: { disabled_with: 'Отправляем..' }
