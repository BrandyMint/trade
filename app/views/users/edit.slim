h2.mb-4 Ваши личные данные
hr
= simple_form_for @user do |f|
  .row
    .col-md-12
      = f.input :name, label: 'Ваше имя'
  .row
    .col-md-6
      = f.input :email,  as: :email
    .col-md-6
      = f.input :phone
  .row
    .col-md-6
      = f.input :password
    .col-md-6
      = f.input :password_confirmation
  .row.mt-4
    .col-md-12
      = f.button :submit, class: 'btn btn-lg btn-primary', data: { disable_with: 'Подождите..' }
